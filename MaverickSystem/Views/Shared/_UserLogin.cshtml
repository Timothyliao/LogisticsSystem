<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Maverick</title>
    @Styles.Render("~/Content/userbootstrap")
    @Styles.Render("~/Content/userlogin")
    @RenderSection("style", required: false)
</head>
<body>
    <div class="cloak"></div>
    <div class="container">
        <div class="header">
            <div id="sheet2" class="content-mui">
                <ul class="content-mui-view">
                    <li class="content-mui-view-cell">
                        <a href="/User/MainPage">返回主页</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="box">
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    @Scripts.Render("~/bundles/userbootstrapJS")
    @Scripts.Render("~/bundles/userdrawCodeJS")
    <script src="https://sdk.jinrishici.com/v2/browser/jinrishici.js" charset="utf-8"></script>
    <script type="text/javascript">

        function Login() {
            var hiWord = document.querySelector("#hi");
            hiWord.innerText = "欢迎登陆";
        };

        function onChange(contxt) {
            var id = "#" + contxt.id;
            var tip = "#tip_" + contxt.id;
            if ($(id).val() == "") {
                if (!$(tip).hasClass("tips_c")) {
                    $(tip).addClass("tips_c");
                }
            } else {
                $(tip).removeClass("tips_c");
            }
        };

        function Import(contxt) {
            var id = "#" + contxt.id;
            var tip = "#tip_" + contxt.id;
            if ($(id).val() != "" && $(tip).hasClass("tips_c")) {
                $(tip).removeClass("tips_c");
            }
        };

        function Delete(contxt) {
            var id = "#" + contxt.id;
            var tip = "#tip_" + contxt.id;
            if ($(id).val() == "" && !$(tip).hasClass("tips_c")) {
                $(tip).addClass("tips_c");
            }
        };

        function SwitchCode() {
            var x = GetCode("authcode");
            $("#codenum").val(x);
        };
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
