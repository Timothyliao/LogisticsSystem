                        </div>
                        <div class="row">
                            <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.ContainerType)
                                <div>
                                    <select name="ContainerType" class="custom-select">
                                        <option value="仓栅式">仓栅式</option>
                                        <option value="栏板式">栏板式</option>
                                        <option value="厢式">厢式</option>
                                        <option value="其他">其他</option>
                                    </select>
                                    @Html.ValidationMessageFor(model => model.ContainerType, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.ContainerLength)
                                <div>
                                    @Html.EditorFor(model => model.ContainerLength, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ContainerLength, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.ContainerWidth)
                                <div>
                                    @Html.EditorFor(model => model.ContainerWidth, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ContainerWidth, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group col-md-3">
                                @Html.LabelFor(model => model.ContainerHeight)
                                <div>
                                    @Html.EditorFor(model => model.ContainerHeight, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ContainerHeight, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label>* 所属网点</label>
                                <div>
                                    <select name="Affiliation" class="custom-select">
                                        @foreach (var key in ViewBag.Keys)
                                        {
                                            <option value="@key">@ViewBag.Websites[key]</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-3">
                                <div>
                                    <input type="submit" value="创  建" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section style{
    <style>
        form {
            width: 100%;
        }

        label {
            font-size: 12px;
        }
    </style>
}
