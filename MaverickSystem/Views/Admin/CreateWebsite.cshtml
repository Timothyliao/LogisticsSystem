@model MaverickSystem.Models.WebSiteViewModel

@{
    ViewBag.Title = "网点添加";
    Layout = "~/Views/Shared/_Master.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">新增网点信息</h4>
                    <small>带<code class="text-danger">&nbsp;*&nbsp;</code>的为必填项</small>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row" style="margin-top:15px">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Name)
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.ChargeMan)
                            @Html.EditorFor(model => model.ChargeMan, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ChargeMan, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.ChargeManTel)
                            @Html.EditorFor(model => model.ChargeManTel, new { htmlAttributes = new { @class = "form-control"} })
                            @Html.ValidationMessageFor(model => model.ChargeManTel, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Province)
                            @Html.EditorFor(model => model.Province, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Province, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Address)
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "精确到街道" } })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Type)
                            <select name="Type" class="custom-select">
                                <option value="1" selected>普通网点</option>
                                <option value="2">集散中心</option>
                                <option value="3">转运中心</option>
                            </select>
                            @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="新 建" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section style{
    <style>
        form {
            width: 100%;
        }
    </style>
}